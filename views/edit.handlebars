<h1 class="mb-1 restaurant-show-title">編輯餐廳資訊</h1>

<div class="container">
  <form action="/restaurant/{{restaurant._id}}?_method=PUT" method="post">
    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">中文名稱</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" id="name" value={{restaurant.name}} required>
      </div>
    </div>

    <div class="form-group row">
      <label for="name_en" class="col-sm-2 col-form-label">外文名稱</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name_en" id="name_en" value={{restaurant.name_en}} required>
      </div>
    </div>

    <div class="form-group row">
      <label for="category" class="col-sm-2 col-form-label">類別</label>
      <div class="col-sm-10">
        <input list="categories" class="form-control" name="category" id="category" value={{restaurant.category}}
          required>
        <datalist id="categories">
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>美式</option>
          <option>酒吧</option>
          <option>咖啡</option>
          <option>抹茶</option>
          <option>甜點</option>
        </datalist>
      </div>
    </div>

    <div class="form-group row">
      <label for="image" class="col-sm-2 col-form-label">圖片連結</label>
      <div class="col-sm-10">
        <input type="url" class="form-control" name="image" id="image" value={{restaurant.image}} required>
      </div>
    </div>

    <div class="form-group row">
      <label for="location" class="col-sm-2 col-form-label">地址</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="location" id="location" value={{restaurant.location}} required>
      </div>
    </div>

    <div class="form-group row">
      <label for="phone" class="col-sm-2 col-form-label">電話</label>
      <div class="col-sm-10">
        <input type="tel" class="form-control" name="phone" id="phone" value={{restaurant.phone}} minlength="8"
          maxlength="10" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="google_map" class="col-sm-2 col-form-label">Google Map 連結</label>
      <div class="col-sm-10">
        <input type="url" class="form-control" name="google_map" id="google_map" placeholder="餐廳 Google Map 連結"
          value={{restaurant.google_map}} required>
      </div>
    </div>

    <div class="form-group row">
      <label for="rating" class="col-sm-2 col-form-label">評分</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" name="rating" id="rating" min="1" max="5" step="0.1"
          value={{restaurant.rating}} placeholder="1 ~ 5分" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="description" class="col-sm-2 col-form-label">簡介</label>
      <div class="col-sm-10">
        <textarea id="description" name="description" class="form-control" rows="3"
          required>{{restaurant.description}}</textarea>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <button type="submit" class="btn btn-primary">修改</button>
    </div>

  </form>
</div>